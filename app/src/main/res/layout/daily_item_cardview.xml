        <LinearLayout
            android:background="@android:color/white"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/ivDailyItemEdit"
                    android:layout_margin="4dp"
                    android:background="@android:color/transparent"
                    android:alpha="0.5"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_menu_black_24dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDailyItemOpenClose"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/ic_access_time_black_24dp"/>
                    <TextView
                        android:id="@+id/tvDailyTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM 07:25"
                        android:textSize="16dp"/>
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="8dp"
                        android:id="@+id/tvDailyMealType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아침식사"
                        android:textSize="16dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_local_dining_black_24dp"/>
                    <TextView
                        android:id="@+id/tvDailyMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="쌀밥 1공기, 아욱국, 고등어조림 1도막, 숙주나물, 김치, 귤 반개"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:id="@+id/layoutDailyRemove"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_marginRight="16dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_sentiment_dissatisfied_black_24dp"/>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tvDailyRemoveTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/ivRemoveChecked"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check_red_24dp"/>
                </LinearLayout>


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/layoutMore"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:id="@+id/layoutDailyLocation"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_marginRight="16dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location_on_black_24dp"/>
                        <TextView
                            android:id="@+id/tvDailyLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="구미도서관 구내식당"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:id="@+id/layoutDailyPeople"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/ic_person_black_24dp" />
                        <TextView
                            android:id="@+id/tvDailyPeople"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="권영이"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:id="@+id/layoutDailyThink"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="16dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_favorite_black_24dp"/>
                        <TextView
                            android:id="@+id/tvDailyThink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"

                            android:text="메뉴가 부담스럽지 않아서 좋았다. 권영이랑 같이 먹으니까 확실히 안정감이 있었다."/>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:id="@+id/layoutDailyPhoto"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_marginRight="16dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_insert_photo_black_24dp"/>
                        <ImageView
                            android:id="@+id/ivDailyPhoto"
                            android:paddingTop="8dp"
                            android:paddingRight="20dp"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:scaleType="fitStart"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivCardOpen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    <!--</android.support.v7.widget.CardView>-->

</LinearLayout>