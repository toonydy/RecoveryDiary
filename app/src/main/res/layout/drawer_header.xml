<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="40dp"
    android:weightSum="1">

    <ImageView
        android:id="@+id/headerIv"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:padding="8dp"
        android:src="@drawable/profileimagetest"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/headerTextGrp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/headerIv"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/headerTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/headerTv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View style="@style/Devider"
        android:layout_below="@+id/headerTextGrp"/>


</RelativeLayout>