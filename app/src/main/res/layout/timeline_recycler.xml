<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:gravity="top"
    android:orientation="vertical">


    <!-- 타임라인 이미지-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/timeline"
                app:layout_constraintBottom_toBottomOf="@+id/timelineCell"/>

          <LinearLayout
              android:id="@+id/timelineCell"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="60dp">

              <ImageView
                  android:id="@+id/gridCell01"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
              <ImageView
                  android:id="@+id/gridCell02"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
              <ImageView
                  android:id="@+id/gridCell03"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
              <ImageView
                  android:id="@+id/gridCell04"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
              <ImageView
                  android:id="@+id/gridCell05"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
              <ImageView
                  android:id="@+id/gridCell06"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
              <ImageView
                  android:id="@+id/gridCell07"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
              <ImageView
                  android:id="@+id/gridCell08"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
              <ImageView
                  android:id="@+id/gridCell09"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
              <ImageView
                  android:id="@+id/gridCell10"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
              <ImageView
                  android:id="@+id/gridCell11"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
              <ImageView
                  android:id="@+id/gridCell12"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
              <ImageView
                  android:id="@+id/gridCell13"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
              <ImageView
                  android:id="@+id/gridCell14"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
              <ImageView
                  android:id="@+id/gridCell15"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
              <ImageView
                  android:id="@+id/gridCell16"
                  android:src="@drawable/green_circle"
                  android:gravity="center"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
              <ImageView
                  android:id="@+id/gridCell17"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
              <ImageView
                  android:id="@+id/gridCell18"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
              <ImageView
                  android:id="@+id/gridCell19"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
              <ImageView
                  android:id="@+id/gridCell20"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
              <ImageView
                  android:id="@+id/gridCell21"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
              <ImageView
                  android:id="@+id/gridCell22"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
              <ImageView
                  android:id="@+id/gridCell23"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
              <ImageView
                  android:id="@+id/gridCell24"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1" />
          </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <!-- 노트 디테일-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp">

            <ImageView
                android:id="@+id/detailNotePaper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:src="@drawable/detailframe" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="18dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/btnDetailPrevDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_left"/>
                        <TextView
                            android:id="@+id/tvDetailDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2019년 9월 17일"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <ImageView
                            android:id="@+id/btnDetailNextDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_right"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvShowDaily"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="자세히보기 >"
                        android:textSize="12dp"
                        android:paddingVertical="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginVertical="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="식사"
                            android:textSize="16dp"/>

                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:orientation="horizontal"
                            android:id="@+id/mealLabelBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginVertical="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="부식"
                            android:textSize="16dp"/>

                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:orientation="horizontal"
                            android:id="@+id/snackLabelBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </LinearLayout>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginVertical="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtChal"
                            android:layout_marginLeft="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="도전"
                            android:textSize="16dp"/>

                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:orientation="horizontal"
                            android:id="@+id/challangeLabelBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</LinearLayout>